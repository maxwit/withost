# default: off
# description: The git d√¶mon allows git repositories to be exported using \
#       the git:// protocol.

service git
{
        disable         = no
        socket_type     = stream
        wait            = no
        user            = git
        server          = /usr/libexec/git-core/git-daemon
        server_args     = --base-path=/home/git/repositories --user-path=public_git --syslog --inetd --verbose
        log_on_failure  += USERID
}
